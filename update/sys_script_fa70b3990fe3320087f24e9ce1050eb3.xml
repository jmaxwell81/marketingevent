        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    
	var total_cost = 0;
	var budget = parseFloat(current.marketing_event.budget.getCurrencyValue());
	
	var equipment = new GlideRecord('x_51117_marketing_equiment_request');
	equipment.addQuery('marketing_event', current.marketing_event); //todos los equipos del evento
	equipment.query();
	
	//obtenemos la sumatoria del costo de todos los equipos del evento
	while(equipment.next())
	{
	   	total_cost = total_cost + parseFloat(current.cost.getCurrencyValue());
	}
	
	//verificamos que el costo total sea menor al presupuesto
	//gs.addInfoMessage("total cost: " + total_cost);
	//gs.addInfoMessage("budget: " + budget);
	if(budget < total_cost)
	{
		gs.addErrorMessage("Total equiment cost is greater than budget.");
		current.setAbortAction(true);
	}	

})(current, previous);]]></script>
